# tox wrapper for vagrant
ARGS=${@:-"-e pep8,py27"}
set -e
cd /vagrant/swift
sed -i '/envlist/ a\
toxworkdir = /home/vagrant/.tox-swift
' tox.ini
cp setup.py _setup.py
cat > setup.py <<EOF
import os
import shutil
os.link = shutil.copy
import _setup
_setup
EOF
set +e
tox $ARGS
error=$?
sed -i '/toxworkdir/d' tox.ini
mv _setup.py setup.py
cd -
exit $error
